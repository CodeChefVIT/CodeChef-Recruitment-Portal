<!DOCTYPE html>
<html>

<head>
    <!-- Title -->
    <title>Admin: Add Questions</title>

    <!-- Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!-- Linking CSS -->
    <link rel="stylesheet" href="css/main.css" />
    <link rel="icon" type="image/gif" href="images/favicon.jpg" />

    <!-- No Script -->
    <noscript>
        <link rel="stylesheet" href="css/noscript.css" /></noscript>

    <!-- Particle.js-->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- reCaptcha -->
    <script src="https://www.google.com/recaptcha/api.js?render=6Ld_gsYUAAAAAKyxXO0Cn1wezKzIWutm8fuG_gdb"></script>

</head>

<body>

    <div id="preloader"></div>

    <div id="particles-js"></div>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <img class="img-responsive logo" src="images/Logo_White.png" alt="Logo" />
            <div class="content">
                {{#each errors}}
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <p>{{this.text}}</p>
                </div>
                {{/each}}
                <div class="inner">
                    <h1>Ready To Give Them A Challenge?</h1>
                    <div class="fields">
                        <form class="add-form" role="form">
                            <p style="color: red">{{msg2}}</p>
                            <div class="field">
                                {{#each arr}}
                                <div class="card" style="width: auto;">
                                    <div>
                                        <h4><b>Submission:</b></h4>
                                    </div>
                                    <ul class="list-group list-group-flush" style="box-shadow: 0px 1px 5px black;">
                                        <li class="list-group-item" style="text-transform: capitalize;"><b>
                                                <h5>{{this.name}}</h5>
                                            </b></li>
                                        <li class="list-group-item"><b>
                                                <h5>{{this.email}}</h5>
                                            </b></li>
                                        {{#each this.response}}
                                        <li class="list-group-item"><b>Question:</b> {{this.ques}}<br><b>Answer:</b>
                                            {{this.answer}}</li>
                                        {{/each}}
                                    </ul>
                                    {{/each}}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <a href="/admin">
                    <button class="primary">Go Back
                    </button>
                </a>
                <a href="/adminlogout">
                    <button class="primary">Logout
                    </button>
                </a>

        </header>

        <!-- Footer -->
        <footer id="footer">
            <p class="copyright">&copy; <a href="http://www.codechefvit.com/index.html">CodeChef- VIT</a>.</p>
        </footer>

    </div>

    </header>

    <!-- BG -->
    <div id="bg"></div>

    <!-- Scripts -->
    <script src="js/jquery.min.js"></script>
    <script src="js/browser.min.js"></script>
    <script src="js/breakpoints.min.js"></script>
    <script src="js/util.js"></script>
    <script src="js/main.js"></script>

</body>

</html>